<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shape_bottomView_shadow"
    android:layout_alignParentBottom="true"
    android:layout_height="55dp"
    android:layout_gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:baselineAligned="false"
        android:id="@+id/llMain"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior">
        <LinearLayout
            android:id="@+id/llHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:id="@+id/ivHome"
                android:background="@drawable/shape_bg_bottom_navigation"
                android:tint="@color/accent"
                android:src="@drawable/icon_home_vector" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llDiscover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:id="@+id/ivDiscover"
                android:tint="?attr/colorReact"
                android:src="@drawable/icon_dicover_vector" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:backgroundTint="#444" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="-22.5dp"
                android:layout_height="127dp"
                android:padding="-10dp"
                android:scaleType="fitCenter"
                android:layout_width="154dp"
                app:lottie_loop="true" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/llNotification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/ivNotification"
                android:tint="?attr/colorReact"
                android:src="@drawable/icon_notification_vector" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view2"
                android:layout_gravity="center"
                android:layout_marginBottom="0.5dp"
                android:layout_height="182dp"
                android:padding="0dp"
                android:layout_width="202dp"
                app:lottie_loop="true" />
        </FrameLayout>
        <LinearLayout
            android:id="@+id/llProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:id="@+id/ivProfile"
                android:src="@drawable/no_profile_image_circle" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>