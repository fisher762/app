<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:id="@+id/main"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@xml/framealfacolor"
        android:id="@+id/infoImageLiner"
        android:foregroundGravity="bottom"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:paddingStart="13dp"
        android:paddingEnd="13dp">
        <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:gravity="bottom" 
            android:foregroundGravity="bottom"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:fillViewport="true">
            <PixelPhoto.Library.Anjo.SuperTextLibrary.SuperTextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textLight_color"
                android:textSize="15sp"
                android:layout_weight="1.0" />
        </ScrollView>
	    <View
		    android:id="@+id/view"
		    android:layout_width="match_parent"
		    android:layout_height="0.1dp"
		    android:layout_marginTop="0dp"
		    android:layout_marginBottom="3dp"
		    android:layout_centerHorizontal="true"
		    android:background="?attr/colorDivider" /> 
        <LinearLayout
            android:id="@+id/mainLiner"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:foregroundGravity="fill_horizontal|left"
            android:gravity="center|left">
            <RelativeLayout  
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view_of_like"
                    android:layout_marginStart="-12dp"
                    android:scaleType="fitCenter"
                    android:translationY="-18dp"
                    android:layout_marginBottom="7dp"
                    android:layout_height="76dp"
                    android:padding="0dp"
                    android:layout_width="76dp" />
                <ImageView
                    android:id="@+id/Like"
                    android:background="@drawable/custom_ripple"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/icon_heart_post_vector"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/Likecount"
                    android:layout_toEndOf="@id/Like"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:textSize="14sp"
                    android:textColor="@color/gnt_white"
                    android:maxLines="1"
                    android:lines="1"
                    android:gravity="center" />
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:id="@+id/Comment"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_ripple_grey"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/icon_comment_post_vector"
                    android:tag="false"
                    android:paddingTop="0dp"
                    android:layout_toEndOf="@id/Likecount" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Commentcount"
                    android:layout_marginTop="12dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="0dp"
                    android:textColor="@color/gnt_white"
                    android:tag="false"
                    android:maxLines="1"
                    android:lines="1"
                    android:paddingTop="0dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:layout_alignParentEnd="false"
                    android:layout_toEndOf="@id/Comment" />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view_of_fav"
                    android:scaleType="fitCenter"
                    android:translationY="0dp"
                    android:layout_marginTop="-7dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="0dp"
                    android:layout_height="59dp"
                    android:padding="0dp"
                    android:layout_width="59dp"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:id="@+id/fav"
                    android:background="@drawable/custom_ripple_yellow"
                    android:src="@drawable/icon_fav_post_vector"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="16dp"
                    android:tag="false"
                    android:paddingTop="0dp" 
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/icon_share_post_vector"
                    android:id="@+id/share"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="9dp"
                    android:tag="false"
                    android:paddingTop="0dp"
                    android:layout_toStartOf="@id/fav" /> 
            </RelativeLayout>
        </LinearLayout> 
    </LinearLayout>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        android:layout_marginTop="0dp"
        app:popupTheme="@style/PopupMenuStyle"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:background="@android:color/transparent">
	    <!--Including User Post Owner Layout -->
	    <include
		    android:id="@+id/postOwnerLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    layout="@layout/toppostuserview"
		    android:layout_alignParentTop="true" /> 
    </androidx.appcompat.widget.Toolbar>
</RelativeLayout>