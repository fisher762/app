<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_of_like"
        android:layout_marginStart="-12dp"
        android:scaleType="fitCenter"
        android:translationY="-18dp"
        android:layout_marginBottom="7dp"
        android:layout_height="76dp"
        android:padding="0dp"
        android:layout_width="76dp" />
    <ImageView
        android:id="@+id/Like"
        android:background="@drawable/custom_ripple"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/icon_heart_post_vector"
        android:layout_marginTop="8dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/Likecount"
        android:layout_toEndOf="@id/Like"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:lines="1"
        android:gravity="center" />
    <ImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:id="@+id/Comment"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_ripple_grey"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/icon_comment_post_vector"
        android:tag="false"
        android:paddingTop="0dp"
        android:layout_toEndOf="@id/Likecount" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Commentcount"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="0dp"
        android:tag="false"
        android:maxLines="1"
        android:lines="1"
        android:paddingTop="0dp" 
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@id/Comment" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_of_fav"
        android:scaleType="fitCenter"
        android:translationY="0dp"
        android:layout_marginTop="-7dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="0dp"
        android:layout_height="59dp"
        android:padding="0dp"
        android:layout_width="59dp"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:id="@+id/fav"
        android:background="@drawable/custom_ripple_yellow"
        android:src="@drawable/icon_fav_post_vector"
        android:layout_marginTop="8dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="16dp"
        android:tag="false"
        android:paddingTop="0dp"
        android:textColor="@color/text_color_in_between"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_share_post_vector" 
        android:id="@+id/share"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:tag="false"
        android:paddingTop="0dp"
        android:layout_toStartOf="@id/fav" />
    <PixelPhoto.Library.Anjo.SuperTextLibrary.SuperTextView
        android:layout_below="@+id/Like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description" 
        android:textSize="13sp"
        android:gravity="start"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="textStart"
        android:textAllCaps="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ViewMoreComment"
        android:textSize="13sp"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="0dp"
        android:paddingTop="0dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:text="@string/Lbl_ShowMoreComments"
        android:textColor="@color/count_color" />
    <TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/ViewCount"
	    android:textSize="13sp"
	    android:maxLines="1"
	    android:lines="1"
	    android:visibility="gone"
	    android:layout_marginTop="4dp"
	    android:layout_below="@+id/description"
	    android:layout_alignParentEnd="true"
	    android:layout_marginStart="11dp"
	    android:layout_marginEnd="11dp"
	    android:paddingTop="0dp"
	    android:layout_marginBottom="10dp"
	    android:textAlignment="textStart"
	    android:textAllCaps="false"
	    android:text="@string/Lbl_Views"
	    android:textColor="@color/count_color" /> 
</RelativeLayout>