<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="225dp"
    android:layout_height="wrap_content" 
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    android:elevation="1dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="7dp"
    app:cardPreventCornerOverlap="true"
	app:cardBackgroundColor="?attr/colorBackground"
    android:paddingBottom="0dp"
    android:padding="0dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:minHeight="100dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:gravity="fill_horizontal"
        android:foregroundGravity="center">
        <ImageView
            android:id="@+id/Image"
            android:transitionName="sharedImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:maxHeight="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/firstbackground"
            android:adjustViewBounds="true"
            android:gravity="fill_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txprice"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/Image"
            android:textSize="13sp"
            android:gravity="end"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:backgroundTint="#5357F3"
            android:background="@drawable/gnt_rounded_corners_shape"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:visibility="visible" />
        <TextView
            android:layout_marginTop="-13dp"
            android:layout_below="@+id/Image"
            android:layout_alignWithParentIfMissing="@+id/Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txExtenstion"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:backgroundTint="#FDBE66"
            android:background="@drawable/shape_radius_white_btn"
            android:textColor="@color/textLight_color" />
        <TextView
            android:layout_below="@+id/Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txDownloads"
            android:layout_marginTop="-12dp"
            android:layout_toStartOf="@+id/txExtenstion"
            android:layout_alignWithParentIfMissing="@+id/Image"
            android:textSize="12sp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:paddingStart="9dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:drawableTint="@color/textLight_color"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/icon_download_vector"
            android:backgroundTint="#FF507B"
            android:background="@drawable/shape_radius_white_btn"
            android:textColor="@color/textLight_color" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txcategory"
            android:textSize="14sp"
            android:text="Beauty and Fashion"
            android:layout_below="@+id/Image"
            android:layout_marginStart="6dp"
            android:layout_marginTop="13dp"
            android:visibility="visible"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txResolution"
            android:layout_below="@+id/txcategory"
            android:textSize="12sp"
            android:textColor="@color/text_color_in_between"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txViews"
            android:layout_below="@+id/txResolution"
            android:textSize="14sp"
            android:textColor="@color/text_color_in_between"
            android:drawableTint="#6AEFD0"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/icon_eyes_vector"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
            android:visibility="visible" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>