<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/userAvatar"
        android:scaleType="centerCrop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/no_profile_image_circle" />
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/userAvatar"
        android:layout_alignParentTop="true"
        android:textSize="14sp"
        android:maxLines="1"
        android:drawablePadding="4dp"
        android:lines="1"
        android:layout_marginTop="14dp" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/moreicon"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/custom_ripple"
        android:src="@drawable/icon_more_dots_vector"
        android:layout_marginTop="12dp"
        android:tag="false"
        android:paddingTop="0dp"
        android:paddingStart="4dp"
        android:paddingEnd="2dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:tint="@color/count_color"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_text"
        android:textSize="10sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="7dp"
        android:maxLines="1" 
        android:lines="1"
        android:layout_alignParentTop="true"
        android:tag="false"
        android:paddingTop="0dp"
        android:paddingStart="17dp"
        android:paddingEnd="1dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:textColor="@color/count_color"
        android:layout_alignParentEnd="false"
        android:layout_toStartOf="@id/moreicon" />
    <TextView
        android:maxLines="1"
        android:lines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/promoted"
         android:layout_toStartOf="@id/time_text"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:visibility="gone"
        android:paddingBottom="4dp"
        android:backgroundTint="#FF9800"
        android:background="@drawable/shape_radius_white_btn"
        android:text="@string/Lbl_Promoted"
        android:textColor="@color/textLight_color" />
</RelativeLayout>