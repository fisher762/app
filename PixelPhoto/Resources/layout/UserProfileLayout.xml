<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/ShapeCircleColor6">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        app:elevation="1dp"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="45dp"
                android:paddingBottom="12dp"
                app:layout_collapseMode="parallax"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/layoutfriends"
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/user_pic"
                        android:scaleType="centerCrop"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/no_profile_image_circle"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="19dp" />
                    <TextView
                        android:id="@+id/fullname"
                        android:layout_toEndOf="@+id/user_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:drawablePadding="4dp"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/card_name_icon"
                        android:layout_toEndOf="@+id/fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="2dp"
                        android:drawablePadding="4dp"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/username"
                        android:layout_toEndOf="@+id/user_pic"
                        android:layout_below="@+id/fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/text_color_in_between"
                        android:textSize="11sp" />
                    <Button
                        android:id="@+id/followButton"
                        android:layout_below="@+id/username"
                        android:background="@drawable/Shape_Radius_Gradient_Btn"
                        android:layout_height="32dp"
                        android:layout_width="120dp"
                        android:padding="8dp"
                        android:layout_marginBottom="3dp"
                        style="@style/Base.TextAppearance.AppCompat.Body1"
                        android:text="@string/Lbl_Follow"
                        android:textColor="@color/textLight_color"
                        android:textSize="12sp"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:textAllCaps="false"
                        android:layout_marginEnd="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/user_pic" />
                    <Button
                        android:id="@+id/messageButton"
                        android:layout_below="@+id/username"
                        android:layout_toEndOf="@+id/followButton"
                        android:background="@xml/background_signup2"
                        android:layout_height="32dp"
                        android:layout_width="110dp"
                        android:padding="8dp"
                        style="@style/Base.TextAppearance.AppCompat.Body1"
                        android:text="@string/Lbl_Message"
                        android:textColor="@color/textLight_color"
                        android:textSize="12sp"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:textAllCaps="false"
                        android:layout_marginEnd="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp" />
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1.3dp"
                    android:elevation="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardBackgroundColor="?attr/ShapeCircleColor6"
                    android:paddingBottom="0dp"
                    android:padding="0dp">
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp">
                        <LinearLayout
                            android:id="@+id/layoutFollowing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:background="@drawable/custom_ripple"
                            android:weightSum="2">
                            <TextView
                                android:id="@+id/CountFollowing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:textSize="19dp"
                                android:text="0"
                                android:layout_gravity="center"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txtFollowing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/prop_detail_den"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:text="@string/Lbl_Following"
                                android:textSize="14dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutFollowers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/layoutFollowing"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="60dp"
                            android:background="@drawable/custom_ripple"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/CountFollowers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:textSize="19dp"
                                android:text="0"
                                android:layout_gravity="center"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txtFollowers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_below="@+id/prop_detail_bedroom"
                                android:layout_centerHorizontal="true"
                                android:text="@string/Lbl_Followers"
                                android:textSize="14dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layoutFavorites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/layoutFollowing"
                            android:background="@drawable/custom_ripple"
                            android:layout_marginStart="60dp">
                            <TextView
                                android:id="@+id/CountFav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:textSize="19dp"
                                android:text="0"
                                android:layout_gravity="center"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txtFav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/prop_detail_bathroom"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:text="@string/Lbl_Favorites"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/aboutliner"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:paddingBottom="8dp"
                        android:paddingStart="11dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="10dp"
                        android:textStyle="bold"
                        android:text="@string/Lbl_aboutMe"
                        android:textSize="13sp" />
                    <com.luseen.autolinklibrary.AutoLinkTextView
                        android:id="@+id/aboutdescUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="12sp"
                        android:maxLines="6"
                        android:ellipsize="end"
                        android:text="So instead of repeating that information back at them with a boring “About Me” header, try opening with something really interesting or unexpected" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/grid_pic"
                        android:layout_alignParentStart="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:tint="@color/text_color_in_between"
                        android:src="@drawable/icon_grid_post_vector" />
                    <ImageView
                        android:id="@+id/menu_pic"
                        android:layout_toEndOf="@+id/grid_pic"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:tint="@color/text_color_in_between"
                        android:src="@drawable/icon_menu_post_vector" />
                    <RelativeLayout
                        android:id="@+id/socialinfolayout"
                        android:layout_toEndOf="@+id/fullname"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/social1"
                            android:visibility="gone"
                            android:textSize="14sp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/google_button"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="G"
                            android:textColor="#DB4437" />
                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/social2"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_toEndOf="@id/social1"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/facebook_button"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="F"
                            android:textColor="#3B5998" />
                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/social3"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_toEndOf="@id/social2"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/twitter_button"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="T"
                            android:textColor="#1DA1F2" />
                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/website"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_toEndOf="@id/social3"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/follow_button_profile_friends"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="W"
                            android:textColor="@color/accent" />
                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/social4"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_toEndOf="@id/website"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/linkdin_button"
                            android:tag="false"
                            android:paddingTop="1dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:text="LI"
                            android:textColor="#0077B5" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:elevation="2dp"
                app:layout_collapseMode="pin"
                android:background="@drawable/linear_gradient_drawable"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/Appname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="15"
                        android:text="@string/Lbl_UserProfile"
                        android:textSize="16sp"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="6dp" />
                    <ImageView
                        android:id="@+id/moreButton"
                        android:background="@drawable/custom_ripple"
                        android:layout_alignParentEnd="true"
                        android:rotation="90"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="end|center"
                        android:gravity="end|center"
                        android:padding="2dp"
                        android:tint="@color/text_color_in_between"
                        android:src="@drawable/icon_more_dots_vector"
                        android:layout_centerVertical="true"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/material_style_ptr_frame"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <PixelPhoto.Activities.Posts.Extras.PRecyclerView
            android:layout_below="@+id/main"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/RecylerFeed"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="50dp"
            android:scrollbars="vertical"
            android:background="?attr/colorPrimary"
            tools:listitem="@layout/Style_Featured_View" />
    </com.liaoinstan.springview.widget.SpringView>
    <ViewStub
        android:id="@+id/viewStub"
        android:layout_below="@+id/main"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_alignParentBottom="true"
        android:inflatedId="@+id/subView"
        android:layout="@layout/EmptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="33dp" />  
</androidx.coordinatorlayout.widget.CoordinatorLayout>