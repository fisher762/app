<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:paddingTop="3dp"
    android:orientation="vertical"
    android:focusable="false"
    android:layout_marginTop="8dp"
    android:focusableInTouchMode="false"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginBottom="0dp" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/mainLinear" >
        <TextView
            android:id="@+id/headText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:paddingBottom="2dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="0dp"
            android:fontFamily="@font/pixel"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/moreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:drawableTint="@color/text_color_in_between"
            android:drawableEnd="@drawable/icon_view_more_vector"
            android:textColor="@color/text_color_in_between"
            android:text="@string/Lbl_ViewMore"
            android:layout_alignParentEnd="true"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:layout_marginEnd="0dp" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="9dp"
        android:scrollbars="vertical" />
</LinearLayout>